<div class="form">
<h1>Add a food item to the menu</h1>
  <%= form_for @menu do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :cuisine %><br>
    <%= f.text_field :cuisine %><br>
    <%= f.label :price %><br>
    <%= f.text_field :price %><br>
  <br>
  <%= f.submit "Edit the menu"%><br>
  <% end %>
</div>
